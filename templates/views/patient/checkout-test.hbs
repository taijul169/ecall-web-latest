<script>

	//   display cart item from localStorage
	function getCart() {
		return localStorage.getItem('cart') ? JSON.parse(localStorage.getItem('cart')) : []
	}
	// display product in checkoutpage
	function DisplayProductInCheckoutpage() {
		const parent = document.querySelector('.card-item-wrapper')
		const cartvalue = getCart()

		for (var i = 0; i < cartvalue.length; i++) {
			const singleItem = document.createElement('tr')
			singleItem.innerHTML = `
				<td>${cartvalue[i].testname}</td>
				<td>${cartvalue[i].hospitalname}</td>
				<td class="text-end">Tk.${cartvalue[i].price}</td>
				<input type="hidden" name="TestName[]" value="${cartvalue[i].testname}"/>
				<input type="hidden" name="LabName[]" value="${cartvalue[i].hospitalname}"/>
				<input type="hidden" name="TestPrice[]" value="${cartvalue[i].price}"/>
				<input type="hidden" name="ServiceID[]" value="${cartvalue[i].id}"/>
			`;
			parent.append(singleItem)
		}
	}
	// total amount count
	function cartTotalAmount() {
		let cartTotal = document.getElementById("cartTotal");
		let totalcost = document.querySelector(".total-cost");
		let totalcost_input = document.querySelector(".total-cost_input");
		let sum = 0;
		const cartvalue = getCart()
		for (var x = 0; x < cartvalue.length; x++) {
			sum = sum + parseInt(cartvalue[x].price)
		}
		cartTotal.innerText = sum
		totalcost_input.value = sum
		totalcost.innerText = sum
		return sum;

	}

	document.addEventListener("DOMContentLoaded", () => {

		DisplayProductInCheckoutpage();
		cartTotalAmount();
	});

</script>


