{{> header}}

      {{!-- header end --}}
		<div class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-8 offset-md-2">

						<div class="account-content">
							<div class="row align-items-center justify-content-center">
								<div class="col-md-7 col-lg-6 login-left">
									<img src="/assets/img/login-banner.png" class="img-fluid" alt="Doccure Login">
								</div>
								<div class="col-md-12 col-lg-6 login-right">
									
									{{#if message}}
                                    <div class="alert {{message.type}}" role="alert">
                                        {{message.message}}
                                    </div>
                                    {{/if}}
									<div class="login-header">
										<h3>Verify Your Account</h3>
									</div>
									<form action="/otp-verify/{{mob}}" method="POST">
										<div class="form-group form-focus d-none">
											<input required type="hidden" value="{{mob}}" name="phone" class="form-control floating">
											
											<label class="focus-label">Phone</label>
										</div>
										<div class="form-group form-focus">
											<input required type="text" name="code" class="form-control floating">
											<label class="focus-label">Code</label>
										</div>
										<button class="btn btn-primary w-100 btn-lg login-btn"
											type="submit">Verify</button>	
									</form>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>

	


{{homeFooter}}

	  